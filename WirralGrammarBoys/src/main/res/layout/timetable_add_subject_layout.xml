<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_logo" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/add_subject_layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light"
        android:fitsSystemWindows="true"
        android:clipToPadding="false" >
        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_bar"
            android:layout_alignParentTop="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >
            <LinearLayout
                android:id="@+id/root_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp" >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp" >
                    <CheckBox
                        android:id="@+id/break_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentRight="true"
                        android:text="Break" />
                    <com.jonny.wgsb.FloatLabelLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/break_check"
                        app:floatLabelTextAppearance="@style/TextAppearance.wgsb.FloatLabel">
                        <AutoCompleteTextView
                            android:id="@+id/name_autocomplete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name"
                            android:maxEms="9"
                            android:inputType="textCapWords" />
                    </com.jonny.wgsb.FloatLabelLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/monday_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp" >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:paddingLeft="4dp"
                            android:text="MONDAY"
                            android:textColor="#FF909090"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:id="@+id/monday_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/layout_selector"
                            android:clickable="true"
                            android:src="@android:drawable/ic_menu_add"
                            android:contentDescription="@string/timetable_name" />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#FF909090" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tuesday_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp" >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:paddingLeft="4dp"
                            android:text="TUESDAY"
                            android:textColor="#FF909090"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:id="@+id/tuesday_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/layout_selector"
                            android:clickable="true"
                            android:src="@android:drawable/ic_menu_add" />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#FF909090" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/wednesday_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp" >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:paddingLeft="4dp"
                            android:text="WEDNESDAY"
                            android:textColor="#FF909090"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:id="@+id/wednesday_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/layout_selector"
                            android:clickable="true"
                            android:src="@android:drawable/ic_menu_add" />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#FF909090" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/thursday_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp" >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:paddingLeft="4dp"
                            android:text="THURSDAY"
                            android:textColor="#FF909090"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:id="@+id/thursday_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/layout_selector"
                            android:clickable="true"
                            android:src="@android:drawable/ic_menu_add" />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#FF909090" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/friday_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp" >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:paddingLeft="4dp"
                            android:text="FRIDAY"
                            android:textColor="#FF909090"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:id="@+id/friday_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/layout_selector"
                            android:clickable="true"
                            android:src="@android:drawable/ic_menu_add" />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#FF909090" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/bottom_bar"
            android:background="#FF909090" />
        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#FF004890"
            android:gravity="center_vertical" >
            <Button
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textColor="#FFFFFFFF" />
            <View
                android:id="@+id/bottom_bar_line"
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:background="#90909090" />
            <Button
                android:id="@+id/done_button"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Done"
                android:textColor="#FFFFFFFF" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>