<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Wgsb" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_wgsb</item>
        <item name="popupMenuStyle">@style/PopupMenu.Wgsb</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Wgsb</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Wgsb</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Wgsb</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Wgsb</item>
        <item name="actionModeBackground">@drawable/cab_background_top_wgsb</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_wgsb</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Wgsb</item>
        <item name="android:editTextStyle">@style/EditTextAppTheme</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewAppTheme</item>
        <item name="actionBarWidgetTheme">@style/Theme.Wgsb.Widget</item>
    </style>

    <style name="ActionBar.Solid.Wgsb" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_wgsb</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_wgsb</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_wgsb</item>
        <item name="progressBarStyle">@style/ProgressBar.Wgsb</item>
    </style>

    <style name="ActionBar.Transparent.Wgsb" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_wgsb</item>
        <item name="progressBarStyle">@style/ProgressBar.Wgsb</item>
    </style>

    <style name="PopupMenu.Wgsb" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_wgsb</item>
    </style>

    <style name="DropDownListView.Wgsb" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_wgsb</item>
    </style>

    <style name="ActionBarTabStyle.Wgsb" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_wgsb</item>
    </style>

    <style name="DropDownNav.Wgsb" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_wgsb</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_wgsb</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_wgsb</item>
    </style>

    <style name="ProgressBar.Wgsb" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_wgsb</item>
    </style>

    <style name="ActionButton.CloseMode.Wgsb" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_wgsb</item>
    </style>

    <style name="Theme.Wgsb.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Wgsb</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Wgsb</item>
    </style>

    <style name="EditTextAppTheme" parent="android:Widget.EditText">
        <item name="android:background">@drawable/wgsb_edit_text_holo_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AutoCompleteTextViewAppTheme" parent="android:Widget.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/wgsb_list_selector_holo_light</item>
        <item name="android:background">@drawable/wgsb_edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextAppearance.wgsb.FloatLabel" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/float_label</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>