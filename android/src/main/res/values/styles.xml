<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Wgsb" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarStyle">@style/ActionBar.Solid.Wgsb</item>
        <item name="actionBarSize">@dimen/actionBarSize</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="backgroundSplit">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="actionModeBackground">@drawable/cab_background_top_wgsb</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_wgsb</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Wgsb</item>
        <item name="android:editTextStyle">@style/EditTextAppTheme</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="ActionBar.Solid.Wgsb" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/colorPrimary</item>
        <item name="backgroundStacked">@color/colorPrimary</item>
        <item name="progressBarStyle">@style/ProgressBar.Wgsb</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="backgroundSplit">@color/colorPrimary</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Wgsb</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowStyle.Wgsb</item>
        <item name="actionOverflowButtonStyle">@style/OverflowStyle.Wgsb</item>
    </style>

    <style name="OverflowStyle.Wgsb" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow_mtrl_alpha</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="ActionBar.Transparent.Wgsb" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_wgsb</item>
        <item name="progressBarStyle">@style/ProgressBar.Wgsb</item>
        <item name="android:background">@drawable/ab_transparent_wgsb</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Wgsb</item>
    </style>

    <style name="ActionBarTabStyle.Wgsb" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_wgsb</item>
    </style>

    <style name="ProgressBar.Wgsb" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_wgsb</item>
    </style>

    <style name="ActionButton.CloseMode.Wgsb" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_wgsb</item>
    </style>

    <style name="EditTextAppTheme" parent="android:Widget.EditText">
        <item name="android:background">@drawable/wgsb_edit_text_holo_light</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.wgsb.FloatLabel" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/float_label</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>